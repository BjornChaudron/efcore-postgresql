services:
  efcore-postgresql-web-api:
    build:
      context: C:\Users\Bjorn\Documents\Visual Studio 2017\Projects\efcore-postgresql\efcore-postgresql-web-api
      dockerfile: Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      BLOG_DB_CONNECTION_STRING: Host=postgres;Database=BlogDb;Username=root;Password=root
    image: efcore-postgresql-web-api
    ports:
    - 8081:80/tcp
    - 80/tcp
  postgres:
    environment:
      POSTGRES_DB: BlogDb
      POSTGRES_PASSWORD: root
      POSTGRES_USER: root
    image: postgres
    ports:
    - 5432:5432/tcp
    restart: always
version: '3.0'